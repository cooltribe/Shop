        <com.searun.shop.view.NumberImageView
            android:id="@+id/judge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.searun.shop.view.NumberImageView>

        <View android:layout_width="1px"
