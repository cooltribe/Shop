<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <include 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/item_myorder_child"/>
    <TextView 
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="退款类型"
        android:drawableRight="@drawable/mi_icon"/>
	<RadioGroup 
	    android:id="@+id/type"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_margin="10dp"
	    android:orientation="vertical">
	    <RadioButton 
	        android:id="@+id/refund"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:checked="true"
	        android:padding="10dp"
	        style="@style/v_top_nav"
	        android:text="我要退款"/>
	    <RadioButton 
	        android:id="@+id/return_goods"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	         style="@style/v_buttom_nav"
	        android:text="我要退货"/>
	</RadioGroup>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="退款金额"
        android:drawableRight="@drawable/mi_icon"/>
	<EditText 
	    android:id="@+id/refund_price"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:layout_margin="10dp"
	    android:singleLine="true"
	    android:background="@drawable/layout_bj"
	    android:hint="请输入退款金额"
	    />
	<LinearLayout 
	    android:id="@+id/logistics_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:visibility="gone"
	    android:orientation="vertical">
	    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="物流公司"
        android:drawableRight="@drawable/mi_icon"/>
	    <TextView 
	        android:id="@+id/select_logistics"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:padding="10dp"
	        android:layout_margin="10dp"
	        android:background="@drawable/layout_bj"
	        android:text="点击选择"/>
	    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="物流编号"
        android:drawableRight="@drawable/mi_icon"/>
	    <EditText 
	        android:id="@+id/num_logistics"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:singleLine="true"
	     android:layout_margin="10dp"
	        android:background="@drawable/layout_bj"
	    android:hint="请输入物流单号"
	    />
	</LinearLayout>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="退款说明"
        />
	<EditText 
	    android:id="@+id/refund_description"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	     android:layout_margin="10dp"
	        android:background="@drawable/layout_bj"
	    android:hint="请输入退款说明"
	    />
	<TextView
        android:id="@+id/config_hidden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true" />
	<Button 
	    android:id="@+id/submit"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="提交申请"
	    android:padding="10dp"
	    android:layout_margin="10dp"
	    android:textColor="#fff"
	    android:background="@drawable/button_bj"/>
</LinearLayout>
</ScrollView><!-- From: file:/D:/AndroidStudioProjects/Shop/shop/src/main/res/layout/activity_refund.xml -->